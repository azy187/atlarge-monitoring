{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["API_*", "POSTGRES_*"]
    },
    "_env": {
      "inputs": ["./.env.example", "./.env"],
      "outputs": ["./.env"],
      "cache": false
    },
    "dev:deploy": {
      "dependsOn": ["_env"]
    },
    "deploy": {
      "dependsOn": ["^build"]
    }
  },
  "globalDependencies": [
    "API_HOST",
    "API_PORT",
    "POSTGRES_HOST",
    "POSTGRES_PORT",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DB"
  ]
}

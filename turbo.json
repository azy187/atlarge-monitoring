{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "_env": {
      "inputs": ["./.env.example", "./.env"],
      "outputs": ["./.env"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["API_*", "POSTGRES_*"]
    },
    "build:web": {
      "inputs": ["./src/**/*", "./index.html"],
      "outputs": ["dist/**"]
    },
    "start:api": {
      "inputs": [".env*"],
      "dependsOn": ["_env", "^build", "^start:api"],
      "env": ["API_*", "POSTGRES_*"],
      "cache": false
    }
  },
  "globalDependencies": [
    "API_HOST",
    "API_PORT",
    "POSTGRES_HOST",
    "POSTGRES_PORT",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DB"
  ]
}
